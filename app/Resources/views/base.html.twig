<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}LaserTracker{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <span class="glyphicon glyphicon-time"></span> LaserTracker
                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li {% if app.request.get('_route') == 'index' %} class="active"{% endif %}>
                            <a href="/">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Buchung
                            </a>
                        </li>
                        <li {% if app.request.get('_route') == 'history' %} class="active"{% endif %}>
                            <a href="/history">
                                <span class="glyphicon glyphicon-th-list"></span> Historie
                            </a>
                        </li>
                        <!--
                        <li>
                            <a href="/statistics" {% if app.request.get('_route') == 'statistics' %} class="active"{% endif %}>
                                <span class="glyphicon glyphicon-stats"></span> Statistiken
                            </a>
                        </li>
                        -->
                    </ul>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
